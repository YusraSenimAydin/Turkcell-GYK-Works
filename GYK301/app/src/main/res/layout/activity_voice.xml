<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="115dp"
        android:layout_height="129dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        tools:background="@android:drawable/ic_btn_speak_now" />

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">


        <Button
            android:id="@+id/recordVoiceBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="Kaydet"
            tools:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/stopVoiceBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:text="Durdur"
            tools:textColor="@android:color/background_light"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/playVoiceBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:text="Ã‡al"
            tools:textColor="@android:color/background_light"
            android:layout_marginLeft="5dp"/>
       </LinearLayout>

</LinearLayout>