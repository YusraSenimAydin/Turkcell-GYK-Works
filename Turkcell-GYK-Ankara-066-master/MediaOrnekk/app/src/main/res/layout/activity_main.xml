<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/open_photo_and_video"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                android:text="Fotoğraf Video"
                 />

            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/open_voice"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                android:text="Ses Kayıt İşlemi"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/open_map"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                android:text="Haritaya Git"
                 />

            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/open_web"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                android:text="Web Sayfasına Git"
               />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/send_sms"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                android:text="Sms Gönder"
                 />

            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/dial_call"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Arama Yap"
                android:textColor="#000"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>